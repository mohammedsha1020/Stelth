<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Stealth.Mobile.ScreenViewPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="PC Screen"
             NavigationPage.HasNavigationBar="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with controls -->
        <Frame Grid.Row="0" BackgroundColor="{StaticResource Primary}" Padding="10" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="â—€" x:Name="BackButton" 
                        BackgroundColor="Transparent" TextColor="White"
                        Clicked="OnBackClicked" FontSize="18"/>
                
                <Label Grid.Column="1" x:Name="StatusLabel" 
                       Text="Connected" TextColor="White"
                       VerticalOptions="Center" HorizontalOptions="Center"/>
                
                <Button Grid.Column="2" Text="âš™ï¸" x:Name="SettingsButton"
                        BackgroundColor="Transparent" TextColor="White"
                        Clicked="OnSettingsClicked" FontSize="16"/>
                
                <Button Grid.Column="3" Text="ðŸ”„" x:Name="RefreshButton"
                        BackgroundColor="Transparent" TextColor="White"
                        Clicked="OnRefreshClicked" FontSize="16"/>
            </Grid>
        </Frame>

        <!-- Main screen display area -->
        <ScrollView Grid.Row="1" x:Name="ScreenScrollView" 
                    ZoomDisplayOptions="Always" MaximumZoomScale="3.0" MinimumZoomScale="0.5">
            <Image x:Name="ScreenImage" 
                   Aspect="AspectFit"
                   BackgroundColor="Black"
                   HeightRequest="600"
                   WidthRequest="800">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnScreenTapped" />
                    <PanGestureRecognizer PanUpdated="OnScreenPanned" />
                </Image.GestureRecognizers>
            </Image>
        </ScrollView>

        <!-- Bottom toolbar -->
        <Frame Grid.Row="2" BackgroundColor="{StaticResource Secondary}" Padding="10" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="ðŸ–±ï¸" x:Name="MouseModeButton"
                        BackgroundColor="Transparent" TextColor="White"
                        Clicked="OnMouseModeClicked" FontSize="16"/>
                
                <Button Grid.Column="1" Text="âŒ¨ï¸" x:Name="KeyboardButton"
                        BackgroundColor="Transparent" TextColor="White"
                        Clicked="OnKeyboardClicked" FontSize="16"/>
                
                <Button Grid.Column="2" Text="ðŸ“±" x:Name="TouchModeButton"
                        BackgroundColor="Transparent" TextColor="White"
                        Clicked="OnTouchModeClicked" FontSize="16"/>
                
                <Button Grid.Column="3" Text="ðŸ“‹" x:Name="ClipboardButton"
                        BackgroundColor="Transparent" TextColor="White"
                        Clicked="OnClipboardClicked" FontSize="16"/>
            </Grid>
        </Frame>

        <!-- Loading overlay -->
        <Grid x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="3" 
              BackgroundColor="Black" Opacity="0.8" IsVisible="True">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <ActivityIndicator IsRunning="True" Color="White" />
                <Label Text="Connecting to PC screen..." TextColor="White" 
                       HorizontalOptions="Center" Margin="0,10,0,0"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
