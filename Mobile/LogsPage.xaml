<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Stealth.Mobile.LogsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Logs">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Editor x:Name="LogEditor" 
                Grid.Row="0"
                IsReadOnly="True"
                FontFamily="Courier"
                BackgroundColor="Black"
                TextColor="LightGreen"
                FontSize="12"
                Text="[System] Stealth Mobile started&#x0a;[Info] Waiting for connection...&#x0a;" />

        <StackLayout Grid.Row="1" Orientation="Horizontal" Padding="10">
            <Button Text="Clear Logs" x:Name="ClearLogsBtn" Clicked="OnClearLogsClicked" />
            <Button Text="Export Logs" x:Name="ExportLogsBtn" Clicked="OnExportLogsClicked" />
        </StackLayout>
    </Grid>
</ContentPage>
